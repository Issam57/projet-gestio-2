{% extends 'base_admin.html.twig' %}

{% block title %}Admin News{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="my-5">Gestion des news</h1>

    <table class="table table-hover">
        <thead class="bg-light">
        <tr>
            <th>Titre</th>
            <th>Contenu</th>
            <th>Image</th>
            <th>Date de cr√©ation</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for new in news %}
        <tr>
            <td><span class="badge badge-info rounded">{{ new.titre }}</span></td>
            <td>{{ new.contenu | raw }}</td>
            <td><img style="width: 50px; height: 50px" src="{{ new.coverImage }}" alt="image"></td>
            <td>{{ new.createdAt | date("d/m/Y")}}</td>
            <td>
                <a href="#" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                <a href="#" class="btn btn-danger"><i class="fas fa-trash"></i></a>
            </td>

        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
